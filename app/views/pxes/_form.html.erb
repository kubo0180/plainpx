<%= form_for(@px) do |f| %>
  <% if @px.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@px.errors.count, "error") %> prohibited this px from being saved:</h2>

      <ul>
      <% @px.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="span6">
    <div class="field">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :description %>
      <%= f.text_area :description, :class => 'description' %>
    </div>

    <div class="field">
      <%= f.file_field :image %>
    </div>
  </div>
  <div class="span4">
    <div class="field">
      <%= f.label :latitude %>
      <%= f.text_field :latitude %>
    </div>
    <div class="field">
      <%= f.label :longitude %>
      <%= f.text_field :longitude %>
    </div>
    <div class="field">
      <%= f.label :gmaps %>
      <%= f.check_box :gmaps %>
    </div>
    <div class="field">
      <%= f.label 'your name' %>
      <%= f.text_field :user_name %>
    </div>
    <div class="actions">
      <%= f.submit :class => 'btn span3 btn-large btn-info' %>
    </div>
  </div>
<% end %>
